<% include partials/header %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <!-- New ToDo-->
    <h1>New Item</h1>
    <form action="/todos" method="POST" id="newTodo">
      <div class="form-group">
        <label for="new-item">Item Text</label>
        <input
          type="text"
          name="todo[text]"
          id="new-item"
          class="form-control"
          placeholder="Enter a Todo"
        />
      </div>
      <button class="btn btn-primary">Create Item</button>
    </form>
    <!-- List ToDo-->
    <h1>To Do Items</h1>
    <ul class="list-group" id="listTodo">
      <% todos.forEach(function(todo){ %>
      <li class="list-group-item">
        <form action="/todos/<%=todo._id%>" method="POST" id="editTodo">
          <div class="form-group">
            <label for="<%=todo._id%>">Item Text</label>
            <input
              type="text"
              value="<%= todo.text %>"
              name="todo[text]"
              class="form-control"
              id="<%=todo._id%>"
            />
          </div>
          <button class="btn btn-primary">Update Item</button>
        </form>
        <span class="lead">
          <%= todo.text %>
        </span>
        <div class="pull-right">
          <button class="btn btn-sm btn-warning editTodo">Edit</button>
          <form
            style="display: inline"
            method="POST"
            action="/todos/<%= todo._id %>"
            id="deleteTodo"
          >
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
          </form>
        </div>
        <div class="clearfix"></div>
      </li>
      <% }); %>
    </ul>
  </div>
</div>

<% include partials/footer %>
